@model IES.Models.Instituicao

<!-- Define o layout da página -->
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <!-- Torna a página responsiva -->
    <meta name="viewport" content="width=device-width" />
    <title>Criar Instituição</title>
</head>

<body>

    <h4>Instituicao</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <!-- asp-action: define a ação que será executada -->
            <form asp-action="Create">
                <!-- asp-validation-summary: exibe uma lista com os erros de validação -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <!-- asp-for: define o campo que será exibido -->
                    <label asp-for="Nome" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Nome" class="form-control" />
                        <!-- asp-validation-for: exibe uma mensagem de erro caso o campo não seja válido -->
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            // _ValidationScriptsPartial: renderiza os scripts necessários para a validação dos campos
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
